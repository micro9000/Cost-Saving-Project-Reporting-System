	ViewBag.Title = "BPIs";
	ViewBag.page_id = "bpis";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="z-depth-1 reports-list-tb " style="background: white; width: 85%; margin: auto;">
	<div class="row">
		<div class="col s12 m12 l12" style="padding: 20px;">
			<table id="dashboard-all-proposal-tb" style="margin: 0">
				<thead class="blue-grey" style="color: white;">
